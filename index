  <meta charset="utf-8">
  <title>Phát video tự động</title>
</head>
<body>
  <a href="#" onclick="playVideo()">Nhấp vào đây</a> để phát video tự động.
  
  <video id="myVideo" width="320" height="240">
    <source src="video.mp4" type="video/mp4">
  </video>
  
  <script>
    function playVideo() {
      var video = document.getElementById("myVideo");
      video.play();
    }
  </script>
</body>
